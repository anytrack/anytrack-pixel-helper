{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "Anytrack Pixel Helper",
  "description": "Detect Anytrack snippets and custom event snippets.",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "src/assets/img/logo-square.png"
  },
  "icons": {
    "128": "src/assets/img/logo.png"
  },
  "permissions": [
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "js": ["contentScript.bundle.js"],
      "run_at": "document_start",
      "css": ["content.styles.css"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["mainWorldContentScript.bundle.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.styles.css", "logo.svg"],
      "matches": []
    }
  ]
}
